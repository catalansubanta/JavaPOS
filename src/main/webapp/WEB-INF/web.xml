<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Session Timeout (in minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.javapos.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/Pages/dashboard/*</url-pattern>
        <url-pattern>/Pages/profile/*</url-pattern>
        <url-pattern>/Pages/cart/*</url-pattern>
        <url-pattern>/Pages/orders/*</url-pattern>
        <url-pattern>/Pages/menu/*</url-pattern>
    </filter-mapping>

    <!-- Servlets -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.javapos.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.javapos.controller.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Add more servlets as needed -->

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>Pages/HomePage.jsp</welcome-file>
    </welcome-file-list>

</web-app>
